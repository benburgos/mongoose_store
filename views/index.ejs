<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %> 
</head>
<body>
<div class="container">
    <section class="hero is-small is-primary">
        <div class="hero-body has-text-centered">
            <p class="title">
                Mongoose Store
            </p>
            <p class="subtitle">
                The INDEX Page
            </p>
        </div>
    </section>
    <div class="columns is-mobile">
    <% for( let index = 0; index < products.length; index++ ) { %>
        <div class="column has-text-centered">
            <ul>
                <li><%= products[index].name %></li>
                <li><a href="<%= products[index].img %>">Image</a></li>
                <li><%= products[index].description %></li>
                <li>$<%= products[index].price %></li>
                <li>Quantity: <%= products[index].qty %></li>
            </ul>
        </div>
    <% } %>
    </div>
</div>
</body>
</html>